{
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"maxNodeModuleJsDepth": 1,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"allowUnreachableCode": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"*": ["*", "src/*"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage"
	],
	"include": [
		"**/*.mjs",
		"**/*.js"
	]
}